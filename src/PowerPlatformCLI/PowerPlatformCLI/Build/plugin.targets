<Project  xmlns='http://schemas.microsoft.com/developer/msbuild/2003' >

	<PropertyGroup>
		<PushPluginTargets>$(PushPluginTargets);PluginPushUpdate</PushPluginTargets>
	</PropertyGroup>

	<Target Name='PluginPushUpdate' DependsOnTargets="Build;PacSelectOrg" Condition="'$(IsPipeline)'!='true'" >

		<PropertyGroup>
			<pluginfile>$(PackageOutputAbsolutePath)$(PackageId).$(PackageVersion).nupkg</pluginfile>
		</PropertyGroup>

		<Exec Command="pac plugin push --pluginId $(PluginId) --pluginFile $(pluginfile)" />

	</Target>


</Project>