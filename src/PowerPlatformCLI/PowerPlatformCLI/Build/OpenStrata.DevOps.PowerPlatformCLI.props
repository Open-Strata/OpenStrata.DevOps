	</PropertyGroup>	
	
	<PropertyGroup>
	    <DashDashForce>--force</DashDashForce>
		<!-- <RefreshTargets>$(RefreshTargets);RefresheIdeDevopsTemplate</RefreshTargets> -->
	</PropertyGroup>

